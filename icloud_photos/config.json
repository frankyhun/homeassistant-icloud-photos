{
  "name": "iCloud Photos Downloader",
  "version": "1.0.0",
  "slug": "icloud_photos",
  "description": "Download photos from iCloud to Home Assistant's media folder",
  "arch": ["aarch64", "amd64", "armv7"],
  "url": "https://github.com/frankyhun/homeassistant-icloud-photos",
  "startup": "services",
  "boot": "auto",
  "options": {
    "apple_id": "example@icloud.com",
    "download_path": "/media/icloud",
    "auto_delete": false,
    "auth_refresh_interval": "12h"
  },
  "schema": {
    "apple_id": "str",
    "download_path": "str",
    "auto_delete": "bool",
    "auth_refresh_interval": "str"
  },
  "map": ["media:rw", "share:rw", "config:rw"]
}
